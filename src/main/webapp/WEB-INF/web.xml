<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <context-param>
    <param-name>zookeeper-connection</param-name>
    <param-value>127.0.0.1:2181</param-value>
  </context-param>
  <context-param>
    <param-name>zookeeper-timeout</param-name>
    <param-value>3000</param-value>
  </context-param>
  <context-param>
    <param-name>zookeeper-root</param-name>
    <param-value>/midolman</param-value>
  </context-param>
  <context-param>
    <param-name>zookeeper-mgmt-root</param-name>
    <param-value>/midolman-mgmt</param-value>
  </context-param>
  <display-name>Restful Web Application</display-name>
  <servlet>
    <servlet-name>jersey-servlet-v1</servlet-name>
    <servlet-class>
      com.sun.jersey.spi.container.servlet.ServletContainer
        </servlet-class>
    <init-param>
      <param-name>
        javax.ws.rs.Application
             </param-name>
      <param-value>
        com.midokura.midolman.mgmt.rest_api.v1.RestApplication
             </param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-servlet-v1</servlet-name>
    <url-pattern>/v1/*</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>KeystoneAuth</filter-name>
    <filter-class>
      com.midokura.midolman.mgmt.servlet.filters.KeystoneAuthFilter
        </filter-class>
    <description>
      This filter authenticates the request by checking
      the
      token sent via Keystone.
        </description>
    <init-param>
      <param-name>service_protocol</param-name>
      <param-value>http</param-value>
    </init-param>
    <init-param>
      <param-name>service_host</param-name>
      <param-value>mido-iida-2.midokura.jp</param-value>
    </init-param>
    <init-param>
      <param-name>service_port</param-name>
      <param-value>5001</param-value>
    </init-param>
    <init-param>
      <param-name>admin_token</param-name>
      <param-value>999888777666</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>KeystoneAuth</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
