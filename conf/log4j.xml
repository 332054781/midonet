<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%d{yyyy.MM.dd HH:mm:ss,SSS}%-5p %c{1} - %m%n"/> 
    </layout> 
  </appender>
  
  <appender name="file" class="org.apache.log4j.RollingFileAppender">
    <param name="file" value="${midolman.log.dir}midolman.log" />
    <param name="MaxFileSize" value="100MB"/>
    <param name="MaxBackupIndex" value="10"/>
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%d{yyyy.MM.dd HH:mm:ss,SSS} %-5p %c{1} - %m%n"/> 
    </layout>
  </appender>

  <root> 
    <priority value ="info" /> 
    <appender-ref ref="console" />
    <appender-ref ref="file" />
  </root>

  <logger name="com.midokura.midolman.packets">
    <level value="debug"/> 
  </logger>
  
  <logger name="com.midokura.midolman.layer3.Router">
    <level value="debug"/> 
  </logger>
  
  <logger name="com.midokura.midolman.layer3.NetworkController">
    <level value="debug"/> 
  </logger>
  
  <logger name="com.midokura.midolman.AbstractController">
    <level value="debug"/> 
  </logger>
  
  <logger name="com.midokura.midolman.BridgeController">
    <level value="debug"/> 
  </logger>

</log4j:configuration>
