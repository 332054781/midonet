<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%-5p %d{yyyy.MM.dd HH:mm:ss,SSS} %c{1} - %M(%L) - %m%n"/> 
    </layout> 
  </appender>
  
  <appender name="file" class="org.apache.log4j.FileAppender">
    <param name="file" value="${catalina.base}/logs/midolman-mgmt.log" />
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%-5p %d{yyyy.MM.dd HH:mm:ss,SSS} %c{1} - %M(%L) - %m%n"/> 
    </layout>
  </appender>

  <root> 
    <priority value ="info" /> 
    <appender-ref ref="console" />
    <appender-ref ref="file" />
  </root>

  <logger name="com.midokura.midolman.mgmt.auth"> 
    <level value="info"/>  
  </logger> 
   
  <logger name="com.midokura.midolman.mgmt.data"> 
    <level value="info"/>  
  </logger> 
   
  <logger name="com.midokura.midolman.mgmt.rest_api"> 
    <level value="info"/>  
  </logger> 
   
  <logger name="com.midokura.midolman.mgmt.servlet"> 
    <level value="info"/>  
  </logger> 
   
</log4j:configuration>
