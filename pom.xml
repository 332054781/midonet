<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.midokura</groupId>
    <artifactId>midonet-parent</artifactId>
    <packaging>pom</packaging>
    <version>12.12-SNAPSHOT</version>
    <name>Midokura MidoNet aggregator project</name>

    <modules>
        <module>midolmanj</module>
        <module>midolmanj-mgmt</module>
        <module>midokura-util</module>
        <module>midonet-functional-tests</module>
        <module>midokura-jdk-bootstrap</module>
    </modules>

    <scm>
        <developerConnection>scm:git:git@github.com:midokura/midonet.git</developerConnection>
        <connection>scm:git:git@github.com:midokura/midonet.git</connection>
        <url>scm:git:git@github.com:midokura/midonet.git</url>
      <tag>HEAD</tag>
  </scm>

    <properties>
        <versions.jackson>1.9.3</versions.jackson>
        <versions.log4j>1.2.16</versions.log4j>
        <versions.jersey>1.10</versions.jersey>
        <versions.jetty>6.1.26</versions.jetty>
        <versions.powermock>1.4.11</versions.powermock>
        <versions.commons.io>2.3</versions.commons.io>
        <versions.commons.cli>1.2</versions.commons.cli>
        <versions.commons.config>1.8</versions.commons.config>
        <versions.hamcrest>1.3.RC2</versions.hamcrest>
        <versions.scala.library>2.9.1-1</versions.scala.library>
        <versions.yammer.metrics>2.1.2</versions.yammer.metrics>
        <versions.testng>6.5.2</versions.testng>
        <versions.junit>4.10</versions.junit>
        <versions.plugins.jdeb>0.10</versions.plugins.jdeb>
        <versions.javax.servlet>2.5</versions.javax.servlet>
    </properties>

    <pluginRepositories>
        <pluginRepository>
            <id>mido-maven</id>
            <name>mido-maven</name>
            <url>http://mido-iida-1.midokura.jp:8081/artifactory/repo</url>
        </pluginRepository>

        <pluginRepository>
            <id>apache.snapshots</id>
            <name>Apache Snapshots</name>
            <url>http://people.apache.org/repo/m2-snapshot-repository</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>

    </pluginRepositories>

    <distributionManagement>
        <snapshotRepository>
            <id>mido-maven-local-snapshots</id>
            <name>mido-maven-local-snapshots</name>
            <url>
                http://mido-iida-1.midokura.jp:8081/artifactory/libs-snapshot-local
            </url>
        </snapshotRepository>

        <repository>
            <id>mido-maven-local-releases</id>
            <name>mido-maven-local-releases</name>
            <url>
                http://mido-iida-1.midokura.jp:8081/artifactory/libs-release-local
            </url>
        </repository>
    </distributionManagement>

    <repositories>

        <repository>
            <id>mido-maven</id>
            <name>mido-maven</name>
            <url>http://mido-iida-1.midokura.jp:8081/artifactory/repo</url>
        </repository>

        <repository>
            <id>jsch-maven</id>
            <name>Jsch maven repository</name>
            <url>http://jsch.sf.net/maven2/</url>
        </repository>

    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.1</version>
                <configuration>
                    <goals>deploy</goals>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <!--Use the following ONLY if you can't disable an SNAPSHOT dependency-->
                    <!--<allowTimestampedSnapshots>true</allowTimestampedSnapshots>-->
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
